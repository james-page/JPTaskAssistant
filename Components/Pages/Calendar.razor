@page "/calendar"
@rendermode InteractiveServer

<PageTitle>Calendar</PageTitle>

<h1>Calendar</h1>

<div class="calendar">
    <div class="month">January 2024</div>
    <div class="days">
        <div class="day">Sun</div>
        <div class="day">Mon</div>
        <div class="day">Tue</div>
        <div class="day">Wed</div>
        <div class="day">Thu</div>
        <div class="day">Fri</div>
        <div class="day">Sat</div>
         @*Days will be dynamically generated using JavaScript*@ 
    </div>
    <div class="dates">
         @*Dates will be dynamically generated using JavaScript*@ 
    </div>
</div> 

<ul>
    @foreach(var task in tasks)
    {
        <li>@task.Title</li>
    }
</ul>

<input placeholder="Add a task" @bind="newTask"/>
<button @onclick="AddTask">Add Task</button>

@code {
    private string? newTask;
    private List<Models.JPTask> tasks = new();

    private void AddTask()
    {
        if (!string.IsNullOrWhiteSpace(newTask))
        {
            tasks.Add(new Models.JPTask { Title = newTask });
            newTask = string.Empty;
            
        }
    }

    //TODO: sever connection?
}

